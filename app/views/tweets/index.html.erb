<p style="color: green"><%= notice %></p>

<h1>Tweets</h1>

<div id="tweets">
  <% @tweets.each do |tweet| %>
    <div>
      <p><%= tweet.message %></p>
      <%= link_to '表示', tweet_path(tweet) %>
      <%= link_to '編集', edit_tweet_path(tweet) %> |
      <%= link_to '削除', tweet_path(tweet), method: :delete, data: { confirm: '削除しますか？' } %>
    </div>
  <% end %>
</div>

<%= link_to "新規ツイート", new_tweet_path %>